{
  "name": "comil-extension",
  "displayName": "comil-extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "comilExtension",
          "title": "Comil",
          "icon": "resources/comilIcon.svg"
        }
      ]
    },
    "views": {
      "comilExtension": [
        {
          "id": "commitMessageView",
          "name": "Commit Message",
          "type": "webview"
        },
        {
          "id": "stagedView",
          "name": "Staged Changes"
        },
        {
          "id": "changesView",
          "name": "Changes"
        }
      ]
    },
    "commands": [
      {
        "command": "comilView.refreshAll",
        "title": "Refresh View",
        "category": "Comil"
      },
      {
        "command": "comilView.stageFile",
        "title": "Stage File",
        "category": "Comil"
      },
      {
        "command": "comilView.unstageFile",
        "title": "Unstage File",
        "category": "Comil"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "comilView.stageFile",
          "when": "view == changesView",
          "group": "inline"
        },
        {
          "command": "comilView.unstageFile",
          "when": "view == stagedView",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "dependencies": {
    "simple-git": "^3.27.0"
  }
}
